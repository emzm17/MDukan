<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/constraintLayout2"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/search_bg">


    <ImageView
        android:id="@+id/cartItemImage"
        android:layout_width="@dimen/dp_150"
        android:layout_height="110dp"
        android:padding="@dimen/dp_4"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cartItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        android:text="â‚¹ 1,00,000"
        android:layout_marginEnd="@dimen/dp_20"
        android:fontFamily="@font/sniglet"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_25"
        app:layout_constraintStart_toEndOf="@id/cartItemImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cartItemBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_3"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sniglet"
        android:maxLines="2"
        android:text="Xiamomi Poco F1"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        app:layout_constraintStart_toEndOf="@id/cartItemImage"
        app:layout_constraintTop_toBottomOf="@id/cartItemPrice" />

    <TextView
        android:id="@+id/cartItemSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_margin="@dimen/dp_4"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:text="Dibya Ranjan"
        app:layout_constraintStart_toEndOf="@id/cartItemImage"
        app:layout_constraintTop_toBottomOf="@id/cartItemBrand" />

    <ImageView
        android:id="@+id/LocationIcon"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_margin="@dimen/dp_4"
        android:src="@drawable/ic_location"
        app:layout_constraintStart_toEndOf="@id/cartItemImage"
        app:layout_constraintTop_toBottomOf="@id/cartItemSeller" />

    <TextView
        android:id="@+id/cartItemCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_10"
        android:text="Ranchi ,"
        app:layout_constraintStart_toEndOf="@id/LocationIcon"
        app:layout_constraintTop_toBottomOf="@id/cartItemSeller" />
    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_margin="@dimen/dp_10"
        android:src="@drawable/baseline_delete_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>