<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/box_grey_bg_white"
    android:orientation="horizontal"
    android:padding="4dp"
    android:layout_margin="2dp"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_weight=".25"
    android:gravity="center"
    android:layout_width="0dp"
    android:layout_height="wrap_content">
    
    <ImageView
        android:scaleType="fitXY"
        android:layout_margin="2dp"
        android:layout_gravity="center"
        android:id="@+id/sell_imageview"
        android:src="@drawable/building"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    
</LinearLayout>
    <LinearLayout
        android:layout_weight=".75"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textStyle="bold"
                    android:id="@+id/spriceTv"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black"
                    android:text="Rs 10000"
                    android:layout_marginStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sbrandTv"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:text="142 Patel Chowk ,Niraml Ghar"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/syearTv"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:text="142 Patel Chowk ,Niraml Ghar"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

         <LinearLayout
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <ImageView
                 android:src="@drawable/ic_location"
                 android:layout_width="wrap_content"
                 android:layout_gravity="bottom"
                 android:layout_marginBottom="5dp"
                 android:layout_height="15dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/scityTv"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:text="Yesterday"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
         </LinearLayout>

    </LinearLayout>
</LinearLayout>