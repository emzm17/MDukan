<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/constraintLayout2"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/search_bg">


    <ImageView
        android:id="@+id/ImageViewItem"
        android:layout_width="@dimen/dp_150"
        android:layout_height="110dp"
        android:padding="@dimen/dp_4"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_6"
        android:text="â‚¹ 1,00,000"
        android:layout_marginEnd="@dimen/dp_20"
        android:fontFamily="@font/sniglet"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_25"
        app:layout_constraintStart_toEndOf="@id/ImageViewItem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_20"
        android:fontFamily="@font/sniglet"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:text="Xiamomi Poco F1"
        app:layout_constraintStart_toEndOf="@id/ImageViewItem"
        app:layout_constraintTop_toBottomOf="@id/tvPrice" />

    <TextView
        android:id="@+id/tvYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_margin="@dimen/dp_6"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:text="2019 - Till Now"
        app:layout_constraintStart_toEndOf="@id/ImageViewItem"
        app:layout_constraintTop_toBottomOf="@id/tvDetails" />

    <ImageView
        android:id="@+id/LocationIcon"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_margin="@dimen/dp_6"
        android:src="@drawable/ic_location"
        app:layout_constraintStart_toEndOf="@id/ImageViewItem"
        app:layout_constraintTop_toBottomOf="@id/tvYear" />

    <TextView
        android:id="@+id/tvcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_10"
        android:text="Ranchi ,"
        app:layout_constraintStart_toEndOf="@id/LocationIcon"
        app:layout_constraintTop_toBottomOf="@id/tvYear" />

    <TextView
        android:id="@+id/tvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_10"
        android:text="Jharkhand"
        app:layout_constraintStart_toEndOf="@id/tvcity"
        app:layout_constraintTop_toBottomOf="@id/tvYear" />


    <ImageView
        android:id="@+id/imgMumbaiHeart"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_margin="@dimen/dp_10"
        android:src="@drawable/ic_heart_unselected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>