<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:padding="5dp"
    android:background="#ECECEC"
    android:orientation="vertical"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/myorderImage"
            android:layout_width="130dp"
            android:layout_marginRight="5dp"
            android:layout_height="130dp"/>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/MyproductTitle"
            android:text="Redmi Poco F1"
            android:textStyle="bold"
            android:textSize="22sp"
            android:fontFamily="@font/sniglet"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/MyproductPrice"
            android:text="Price: 1000"
            android:textSize="15sp"
            android:fontFamily="@font/sniglet"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/MyproductId"
            android:text="OrderID: abcdefghei"
            android:textSize="15sp"
            android:fontFamily="@font/sniglet"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/MyproductStatus"
            android:text="@string/status_ordered"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/sniglet"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/MyBtnCancel"
            android:layout_width="match_parent"
            android:text="Cancel"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
    </LinearLayout>


</LinearLayout>

